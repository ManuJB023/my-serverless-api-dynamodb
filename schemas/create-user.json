{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Create User",
  "type": "object",
  "required": ["name", "email"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100
    },
    "email": {
      "type": "string",
      "format": "email",
      "maxLength": 255
    }
  }
}